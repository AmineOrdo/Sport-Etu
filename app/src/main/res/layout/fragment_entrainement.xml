<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/ModifierView"
        android:layout_width="218dp"
        android:layout_height="207dp"
        android:background="@color/colorView"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74" />

    <View
        android:id="@+id/PlanifierView"
        android:layout_width="218dp"
        android:layout_height="207dp"
        android:background="@color/colorView"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23000002" />

    <ImageView
        android:id="@+id/PlanifierImage"
        android:layout_width="162dp"
        android:layout_height="173dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/PlanifierView"
        app:layout_constraintEnd_toEndOf="@+id/PlanifierView"
        app:layout_constraintStart_toStartOf="@+id/PlanifierView"
        app:layout_constraintTop_toBottomOf="@+id/PlanifierText"
        app:layout_constraintVertical_bias="0.513"
        app:srcCompat="@drawable/ic_baseline_event_24" />

    <TextView
        android:id="@+id/PlanifierText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planifier"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/PlanifierView"
        app:layout_constraintEnd_toEndOf="@+id/PlanifierView"
        app:layout_constraintStart_toStartOf="@+id/PlanifierView" />

    <ImageView
        android:id="@+id/ModifierImage"
        android:layout_width="162dp"
        android:layout_height="173dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/ModifierView"
        app:layout_constraintEnd_toEndOf="@+id/ModifierView"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/ModifierView"
        app:layout_constraintTop_toTopOf="@+id/ModifierView"
        app:layout_constraintVertical_bias="0.558"
        app:srcCompat="@drawable/ic_baseline_history_edu_24" />

    <TextView
        android:id="@+id/ModifierText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consulter"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ModifierView"
        app:layout_constraintEnd_toEndOf="@+id/ModifierView"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/ModifierView" />

    <TextView
        android:id="@+id/msgBienvenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heureux de te revoir"
        android:textColor="@color/colorAccent"

        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050000012" />

</androidx.constraintlayout.widget.ConstraintLayout>