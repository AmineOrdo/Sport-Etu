<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".entrainement.ProgrammationActivity">

    <TextView
        android:id="@+id/materialTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Programmer une activité"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nomActiviteTF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="activité"
        app:layout_constraintTop_toBottomOf="@+id/materialTextView">

    </EditText>

    <EditText
        android:id="@+id/heureActiviteTF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="heure"
        app:layout_constraintTop_toBottomOf="@id/nomActiviteTF"/>


    <EditText
        android:id="@+id/dateActiviteTF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="date"
        app:layout_constraintTop_toBottomOf="@id/heureActiviteTF"/>




    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Enregistrer"
        android:id="@+id/buttonProgrammer"
        />

</androidx.constraintlayout.widget.ConstraintLayout>